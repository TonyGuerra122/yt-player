#!/usr/bin/env bash
set -euo pipefail
MAIN_CLASS="com.tonyguerra.ytplayer.Main"
JAR="/usr/share/java/yt-player/yt-player-@VERSION@.jar"

# fallback se mudar o nome:
if [[ ! -f "$JAR" ]]; then
  JAR="$(ls /usr/share/java/yt-player/yt-player-*.jar | head -n1)"
fi

exec java -cp "$JAR" "$MAIN_CLASS" "$@"
